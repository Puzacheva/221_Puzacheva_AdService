<Page x:Class="_221_Puzacheva_AdService.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_221_Puzacheva_AdService.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="440" d:DesignWidth="880"
      Title="Авторизация">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="95"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="85"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="290"></ColumnDefinition>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="txtHintPassword" Height="30" Width="120" Padding="7" Foreground="Gray" Grid.Row="1" Grid.Column="2" Text="Пароль" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,71,0,0"/>
        <TextBlock x:Name="txtHintLogin" Height="30" Width="120" Padding="7" Foreground="Gray" Grid.Row="1" Grid.Column="2"  Text="Логин" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <Label Content="Логин" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,28,0,0"/>
        <Label Content="Пароль" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,69,0,0" />
        <TextBox x:Name="TextBoxLogin" Height="30" Background="Transparent" Grid.Column="2" Grid.Row="1" Width="120" FontSize="16"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0" TextChanged="TextBoxLogin_Changed" ToolTip="Введите ваш логин"/>
        <PasswordBox x:Name="PasswordBox" Height="30" Background="Transparent" Grid.Column="2" Grid.Row="1" Width="120" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,71,0,0" PasswordChanged="PasswordBox_PasswordChanged" ToolTip="Введите пароль"/>
        <Button x:Name="ButtonEnter" Click="ButtonEnter_OnClick" Grid.Column="2" Content="Вход" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,137,0,0" Width="120" Grid.Row="1" ToolTip="Нажмите, чтобы войти" IsDefault="True"/>
    </Grid>
</Page>
